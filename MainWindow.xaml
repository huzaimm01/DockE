<Window x:Class="DockE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DockE" Height="200" Width="500"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#00FFFFFF"
        ShowInTaskbar="False">

    <Border CornerRadius="16" Background="#CCFFFFFF" Padding="10" Margin="10">
        <Grid>
            <!-- Close (hide to tray) button -->
            <Button Content="âœ•"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="16"
                    Padding="5"
                    Cursor="Hand"
                    Click="CloseToTray_Click"/>
            
            <!-- Emoji panel with horizontal scroll -->
            <ScrollViewer Margin="0,30,0,0"
                          PanningMode="HorizontalOnly"
                          ScrollViewer.CanContentScroll="False"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled">
                <StackPanel x:Name="EmojiPanel" Orientation="Horizontal"
                            HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
